<com.nirhart.parallaxscroll.views.ParallaxScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:parallax_factor="1.9"
    tools:context=".MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
<EditText
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:cursorVisible="false"
    android:id="@+id/dummy_edit_text"
    android:theme="@android:style/TextAppearance.Widget.TextView">
    <requestFocus/>
    </EditText>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="252dp"

            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:id="@+id/img_read"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"

            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:background="@color/green_nephritis"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ORIGINAL"
                    android:id="@+id/original"
                    android:background="@color/black_midnight_blue"
                    android:textColor="@color/white_clouds"
                    android:paddingTop="3dp"
                    android:paddingBottom="4dp"
                    android:paddingRight="8dp"
                    android:paddingLeft="4dp"
                    android:paddingEnd="8dp"
                    android:paddingStart="3dp"
                    android:fontFamily="sans-serif-light"

                    android:layout_alignParentStart="true"
                    android:layout_alignParentLeft="true"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AUTHOR"
                    android:gravity="right|end"
                    android:background="@color/green_nephritis"
                    android:textColor="@color/white_clouds"
                    android:paddingTop="3dp"
                    android:paddingBottom="4dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="4dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="3dp"
                    android:id="@+id/author_name"
                    android:fontFamily="sans-serif-light"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:background="@android:color/white"
            android:padding="5dp"
            android:cursorVisible="false"
            android:theme="@android:style/TextAppearance.Widget.TextView"
            android:textIsSelectable="true"
            android:id="@+id/read_content"
            />
        </LinearLayout>
    </LinearLayout>

</com.nirhart.parallaxscroll.views.ParallaxScrollView>
